            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 text-center">
        Something
      </div>
    </div>
  </div>
